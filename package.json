{
  "name": "riot-action",
  "version": "0.1.0",
  "description": "Logic separation for Riot.js",
  "main": "dist/commonjs.js",
  "jsnext:main": "index.js",
  "directories": {
    "lib": "lib",
    "doc": "doc"
  },
  "scripts": {
    "pretest": "npm run build",
    "test": "npm run eslint && npm run karma",
    "prepublish": "make build",
    "build": "rollup -c",
    "watch": "chokidar 'lib/**' -c 'npm run build'",
    "eslint": "eslint -c ./.eslintrc lib",
    "karma": "karma start test/karma.conf.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cognitom/riot-action.git"
  },
  "keywords": [
    "riot"
  ],
  "dependencies": {
    "riot": "^2.3.12",
    "riot-route": "^2.3.14"
  },
  "devDependencies": {
    "babel-preset-es2015-rollup": "^1.0.0",
    "chokidar-cli": "^1.2.0",
    "eslint": "^1.10.3",
    "expect.js": "^0.3.1",
    "karma": "^0.13.19",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^1.1.5",
    "karma-phantomjs-launcher": "^0.2.3",
    "mocha": "^2.3.4",
    "phantomjs": "^1.9.19",
    "rollup": "^0.24.0",
    "rollup-plugin-babel": "^2.3.8",
    "rollup-pluginutils": "^1.3.1",
    "uglify-js": "^2.6.1"
  },
  "author": "Tsutomu Kawamura",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cognitom/riot-action/issues"
  },
  "homepage": "https://github.com/cognitom/riot-action#readme"
}
